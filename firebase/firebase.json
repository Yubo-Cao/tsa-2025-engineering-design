{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "pip install -r functions/requirements.txt"
      ],
      "cucumber": {
        "memory": "512MiB",
        "timeoutSeconds": 60
      },
      "melon": {
        "memory": "512MiB",
        "timeoutSeconds": 60
      },
      "rice": {
        "memory": "512MiB",
        "timeoutSeconds": 60
      },
      "tomato": {
        "memory": "512MiB",
        "timeoutSeconds": 60
      }
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}